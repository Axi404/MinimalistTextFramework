---
// Scene display component
---

<div id="scene-output" class="scene-container">
    <div class="scene-header">
        <div class="scene-decorators">
            <span class="header-icon animate-glow">⟪</span>
            <span class="header-icon animate-glow">⟫</span>
        </div>
        <h2 id="scene-name" class="scene-title"></h2>
        <div class="scene-decorators">
            <span class="header-icon animate-glow">⟪</span>
            <span class="header-icon animate-glow">⟫</span>
        </div>
    </div>
    <div class="scene-content">
        <p id="scene-description" class="scene-description"></p>
    </div>
</div>

<style>
    .scene-container {
        background: linear-gradient(
            135deg,
            rgba(0, 30, 30, 0.4),
            rgba(0, 20, 40, 0.4)
        );
        border-radius: 8px;
        border: 1px solid rgba(0, 255, 204, 0.3);
        box-shadow:
            0 4px 20px rgba(0, 255, 204, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
    }

    .scene-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, transparent, #00ffcc, transparent);
        animation: data-stream 4s linear infinite;
    }

    @keyframes data-stream {
        0% {
            transform: translateX(-100%);
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
        100% {
            transform: translateX(100%);
            opacity: 0;
        }
    }

    .scene-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 1rem 0rem;
        background: linear-gradient(
            135deg,
            rgba(0, 50, 50, 0.3),
            rgba(0, 30, 60, 0.3)
        );
        border-bottom: 1px solid rgba(0, 255, 204, 0.2);
        position: relative;
    }

    .scene-decorators {
        display: flex;
        gap: 0.5rem;
    }

    .header-icon {
        color: #ff00ff;
        font-size: 1.2rem;
        opacity: 0.8;
        text-shadow: 0 0 8px #ff00ff;
        animation: float 3s ease-in-out infinite;
    }

    .header-icon:nth-child(even) {
        animation-delay: 1.5s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-5px);
        }
    }

    .animate-glow {
        animation: glow-pulse 2s ease-in-out infinite alternate;
    }

    @keyframes glow-pulse {
        from {
            text-shadow: 0 0 8px #ff00ff;
            opacity: 0.8;
        }
        to {
            text-shadow:
                0 0 15px #ff00ff,
                0 0 25px #ff00ff;
            opacity: 1;
        }
    }

    .scene-title {
        color: #ff00ff;
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 3px;
        text-align: center;
        text-shadow:
            0 0 10px #ff00ff,
            0 0 20px #ff00ff,
            0 0 30px #ff00ff;
        margin: 0;
        background: linear-gradient(45deg, #ff00ff, #00ffff, #ff00ff);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-shift 4s ease infinite;
        position: relative;
    }

    @keyframes gradient-shift {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .scene-content {
        padding: 2rem;
    }

    .scene-description {
        font-size: 1.15rem;
        line-height: 1.8;
        color: #00ffcc;
        text-shadow: 0 0 3px rgba(0, 255, 204, 0.5);
        margin: 0;
        padding: 1.5rem;
        border-left: 4px solid rgba(0, 255, 204, 0.6);
        background: linear-gradient(
            135deg,
            rgba(0, 30, 30, 0.6),
            rgba(0, 40, 40, 0.4)
        );
        border-radius: 0 8px 8px 0;
        white-space: pre-line;
        position: relative;
        box-shadow:
            inset 4px 0 8px rgba(0, 255, 204, 0.1),
            0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .scene-description::before {
        content: "";
        position: absolute;
        left: -4px;
        top: 0;
        bottom: 0;
        width: 4px;
        background: linear-gradient(180deg, #00ffcc, #00aacc, #00ffcc);
        animation: border-pulse 3s ease-in-out infinite;
    }

    @keyframes border-pulse {
        0%,
        100% {
            opacity: 0.6;
        }
        50% {
            opacity: 1;
            box-shadow: 0 0 10px #00ffcc;
        }
    }

    /* Markdown styling */
    .scene-description strong {
        color: #ffff00;
        text-shadow: 0 0 5px rgba(255, 255, 0, 0.8);
        font-weight: bold;
        background: rgba(255, 255, 0, 0.1);
        padding: 0.1rem 0.3rem;
        border-radius: 3px;
    }

    .scene-description em {
        color: #ff9966;
        font-style: italic;
        text-shadow: 0 0 4px rgba(255, 153, 102, 0.7);
        background: rgba(255, 153, 102, 0.1);
        padding: 0.1rem 0.2rem;
        border-radius: 2px;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .scene-header {
            flex-direction: column;
            gap: 1rem;
            padding: 1rem;
        }

        .scene-title {
            font-size: 1.5rem;
            letter-spacing: 2px;
        }

        .scene-content {
            padding: 1.5rem 1rem;
        }

        .scene-description {
            font-size: 1rem;
            padding: 1rem;
        }
    }
</style>

