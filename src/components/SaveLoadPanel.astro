---
// Save and load panel component
---

<div id="save-load-panel" class="cyber-panel panel-save">
    <div class="panel-header panel-header-save">
        <span class="disk-icon cyber-icon text-warning spin-animation">💾</span>
        <h3 class="cyber-subtitle text-warning">存档管理</h3>
        <div class="data-flow text-warning"></div>
    </div>

    <div class="panel-content-sm">
        <div class="cyber-grid grid-2">
            <button id="export-save" class="cyber-btn btn-primary">
                <span class="btn-icon">📤</span>
                <span>导出存档</span>
            </button>
            <button id="import-save" class="cyber-btn btn-primary">
                <span class="btn-icon">📥</span>
                <span>导入存档</span>
            </button>
            <button id="export-file" class="cyber-btn btn-secondary">
                <span class="btn-icon">💾</span>
                <span>下载存档文件</span>
            </button>
            <div class="cyber-file-input">
                <input type="file" id="import-file" accept=".json" />
                <div class="file-input-trigger" id="import-file-btn">
                    <span class="file-input-icon">📂</span>
                    <div class="file-input-text">
                        <span class="file-input-primary">上传存档文件</span>
                        <span class="file-input-secondary">支持 .json 格式</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="save-load-area" class="cyber-form" style="display: none;">
        <div class="form-group">
            <label for="save-data" class="form-label">存档数据</label>
            <textarea
                id="save-data"
                placeholder="粘贴存档数据到此处或复制当前存档"
                class="cyber-textarea"></textarea>
        </div>
        <div class="cyber-grid grid-3">
            <button id="copy-save" class="cyber-btn btn-primary btn-sm">
                <span class="btn-icon">📋</span>
                <span>复制</span>
            </button>
            <button id="load-save" class="cyber-btn btn-success btn-sm">
                <span class="btn-icon">✅</span>
                <span>应用</span>
            </button>
            <button id="cancel-save-load" class="cyber-btn btn-danger btn-sm">
                <span class="btn-icon">❌</span>
                <span>取消</span>
            </button>
        </div>
    </div>
</div>

